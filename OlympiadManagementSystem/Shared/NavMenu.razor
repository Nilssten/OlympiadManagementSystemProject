
@using OlympiadManagementSystem.Areas.Administrative.Pages 

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">OlympiadManagementSystem</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<AuthorizeView>
    <NotAuthorized>
        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
            <ul class="nav flex-column">
                    <li class="nav-item px-2">
                        <NavLink class="nav-link" href="register">
                            <span class="oi oi-plus" aria-hidden="true"></span> Register
                        </NavLink>
                    </li>
                    <li class="nav-item px-2">
                        <NavLink class="nav-link" href="login">
                            <span class="oi oi-plus" aria-hidden="true"></span> Login
                        </NavLink>
                    </li>
                </ul>
        </div>
    </NotAuthorized>
    <Authorized>

        @*super/admin navigattion*@
        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
          
              <AuthorizeView Roles="admin , superadmin" Context="AdminContext">
                        <Authorized>
                           <AdminNav/>
                        </Authorized>
              </AuthorizeView>


            
            <AuthorizeView Roles="applicant , evaluator , organizer , participant" Context="DefaultUserContext">
                <Authorized>
                    @*Applicant Navigation*@
                    <AuthorizeView Roles="applicant" Context="ApplicantContext">
                        <Authorized>
                         
                                <ul>
                                    <li class="nav-item px-2">
                                        <NavLink class="nav-link" href="myParticipants" Match="NavLinkMatch.All">
                                            <span class="oi oi-home" aria-hidden="true"></span> My Participants
                                        </NavLink>
                                    </li>
                                    <li class="nav-item px-2">
                                        <NavLink class="nav-link" href="registerParticipant" Match="NavLinkMatch.All">
                                            <span class="oi oi-home" aria-hidden="true"></span> Register Participant
                                        </NavLink>
                                    </li>
                                </ul>
                        </Authorized>
                    </AuthorizeView>

                    
                   
                    @*Default User navigation*@
                            <ul>
                                <li class="nav-item px-2">
                                    <NavLink class="nav-link" href="myOlympiads" Match="NavLinkMatch.All">
                                        <span class="oi oi-home" aria-hidden="true"></span> My olympiads
                                    </NavLink>
                                </li>
                            </ul>
                </Authorized>
            </AuthorizeView>
        

            @* mby better to change later to create olympiad claim*@
            <AuthorizeView Roles="admin , superadmin , organizer" Context="CreateOlympiadContext">
                <Authorized>
                    <ul>
                        <li class="nav-item px-2">
                            <NavLink class="nav-link" href="createOlympiad" Match="NavLinkMatch.All">
                                <span class="oi oi-media-play" aria-hidden="true"></span> Create Olympiad
                            </NavLink>
                        </li>
                    </ul>
                </Authorized>
            </AuthorizeView>





            <ul>
                <li class="nav-item px-2">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <li class="nav-item px-2">
                    <NavLink class="nav-link" href="exploreOlympiads" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Explore olympiads
                    </NavLink>
                </li>
                <li class="nav-item px-2">
                    <NavLink class="nav-link" href="logout">
                        <span class="oi oi-plus" aria-hidden="true"></span> Logout
                    </NavLink>
                </li>
            </ul>
        </div>
    </Authorized>
 

</AuthorizeView>




@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
